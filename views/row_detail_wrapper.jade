// this is a common wrapper template for all row_detail_* pages.

extends page

block title
  | Results from #{table} 

block content

  - var rows_total = values.length
  - var rows_show  = Math.min(rows_total, limit)

  block data

  p Total rows: #{rows_total}
    br
    | Limit: #{limit}
    br 
    | Shown: #{rows_show}
